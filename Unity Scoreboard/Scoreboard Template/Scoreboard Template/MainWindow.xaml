<Window x:Class="Scoreboard_Template.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Scoreboard_Template"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <TextBox x:Name="Username_TextBox" HorizontalAlignment="Left" Height="23" Margin="247,45,0,0" TextWrapping="Wrap" Text="Username" VerticalAlignment="Top" Width="120"/>
        <Label x:Name="Username_Label" Content="Username: " HorizontalAlignment="Left" Margin="144,42,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="Password_TextBox" HorizontalAlignment="Left" Height="23" Margin="247,90,0,0" TextWrapping="Wrap" Text="Password" VerticalAlignment="Top" Width="120"/>
        <Label x:Name="Password_Label" Content="Password: " HorizontalAlignment="Left" Margin="144,87,0,0" VerticalAlignment="Top"/>
        <Button x:Name="button" Content="Submit Score" HorizontalAlignment="Left" Margin="227,232,0,0" VerticalAlignment="Top" Width="75" Click="button_Click"/>
        <Label x:Name="Score_Label" Content="Score" HorizontalAlignment="Left" Margin="48,113,0,0" VerticalAlignment="Top" FontSize="72"/>

    </Grid>
</Window>
